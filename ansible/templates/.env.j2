# FastAPI Base Project Environment Configuration
# Generated by Ansible deployment on {{ ansible_date_time.iso8601 }}
# Deployment ID: {{ deployment_id | default('unknown') }}

COMPOSE_PROJECT_NAME={{ compose_project_name | default('fastapi-base-project') }}

# Application Configuration
APP__NAME={{ app_name | default('FastAPI Base Project') }}
APP__VERSION={{ app_version }}
APP__TIMEZONE={{ app_timezone | default('Asia/Ho_Chi_Minh') }}
APP__PORT={{ app_port | default('8000') }}
APP__CORS_ORIGINS={{ app_cors_origins | default('http://localhost,http://localhost:3000,http://localhost:5173') }}
APP__BASIC_AUTH={{ app_basic_auth | default('admin:$$2y$$05$$kSD2hpolZf0isSgIS6Pte.X3MSlf.kgnfPf4De1IA2VgUahLKue6u') }}

# API Configuration
API__CONCURRENCY={{ api_concurrency | default('4') }}

# Database Configuration
POSTGRES__USER={{ postgres_user }}
POSTGRES__PASSWORD={{ postgres_password }}
POSTGRES__DB={{ postgres_db }}
POSTGRES__HOST={{ postgres_host | default('pgbouncer') }}
POSTGRES__PORT={{ postgres_port | default('5432') }}

# RabbitMQ Configuration
RABBITMQ__USER={{ rabbitmq_user }}
RABBITMQ__PASS={{ rabbitmq_pass }}

# Monitoring Configuration
{% if sentry_dsn is defined and sentry_dsn != '' %}
SENTRY__DSN={{ sentry_dsn }}
SENTRY__ENVIRONMENT={{ environment }}
{% endif %}

# PgAdmin Configuration
PGADMIN__EMAIL={{ pgadmin_email }}
PGADMIN__PASSWORD={{ pgadmin_password }}
